/dts-v1/;

#include "mt7628an.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "wififreego,WFG-TRAVEL", "mediatek,mt7628an-soc";
	model = "WFG-TRAVEL";

	chosen {
		bootargs = "console=ttyS0,57600";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x4000000>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		/* gpio0 0-31 
			gpio1 32-63 */

		go {
			label = "wfg-travel:blue:go";
			gpios = <&gpio1 12 1>;
		};
		air {
			label = "wfg-travel:blue:air";
			gpios = <&gpio1 11 1>;
		};
		wan {
			label = "wfg-travel:blue:wan";
			gpios = <&gpio1 10 1>;
		};
		power {
      label = "wfg-travel:blue:power";
      gpios = <&gpio1 9 1>;
    };
	};

	gpio-keys {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio0 11 1>;
			linux,code = <KEY_RESTART>;
		};
	};
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "i2s", "refclk", "wled_an", "p0led_an", "p1led_an", "p2led_an";
			ralink,function = "gpio";
		};
/*		wled_an {
      ralink,group = "wled_an";
      ralink,function = "wled_an";
    }; */
	};
};

&wmac {
	status = "okay";
	ralink,mtd-eeprom = <&factory 0x4>;
};

&ethernet {
	mtd-mac-address = <&factory 0x28>;
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;
		m25p,chunked-io = <32>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
			read-only;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0xfb0000>;
		};
	};
};
